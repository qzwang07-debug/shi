<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zNova.system.mapper.UserProductInteractionMapper">

    <resultMap type="com.zNova.system.domain.UserProductInteraction" id="UserProductInteractionResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="productId"    column="product_id"    />
        <result property="interactionType"    column="interaction_type"    />
        <result property="weight"    column="weight"    />
        <result property="orderId"    column="order_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectUserProductInteractionVo">
        select id, user_id, product_id, interaction_type, weight, order_id, create_time 
        from user_product_interaction
    </sql>

    <select id="selectUserProductInteractionById" parameterType="Long" resultMap="UserProductInteractionResult">
        <include refid="selectUserProductInteractionVo"/>
        where id = #{id}
    </select>

    <select id="selectUserProductInteractionList" parameterType="com.zNova.system.domain.UserProductInteraction" resultMap="UserProductInteractionResult">
        <include refid="selectUserProductInteractionVo"/>
        <where>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="productId != null"> and product_id = #{productId}</if>
            <if test="interactionType != null and interactionType != ''"> and interaction_type = #{interactionType}</if>
            <if test="orderId != null"> and order_id = #{orderId}</if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertUserProductInteraction" parameterType="com.zNova.system.domain.UserProductInteraction" useGeneratedKeys="true" keyProperty="id">
        insert into user_product_interaction
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="interactionType != null">interaction_type,</if>
            <if test="weight != null">weight,</if>
            <if test="orderId != null">order_id,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="interactionType != null">#{interactionType},</if>
            <if test="weight != null">#{weight},</if>
            <if test="orderId != null">#{orderId},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <insert id="batchInsertUserProductInteraction">
        insert into user_product_interaction (user_id, product_id, interaction_type, weight, order_id, create_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId}, #{item.productId}, #{item.interactionType}, #{item.weight}, #{item.orderId}, #{item.createTime})
        </foreach>
    </insert>

    <!-- 查询用户交互过的商品ID列表 -->
    <select id="selectUserInteractedProductIds" resultType="Long">
        SELECT DISTINCT product_id 
        FROM user_product_interaction 
        WHERE user_id = #{userId}
    </select>

    <!-- 查询商品共现次数(两个商品被同一用户交互的次数) -->
    <select id="selectProductCoOccurrence" resultType="java.util.HashMap">
        SELECT 
            a.product_id as productA,
            b.product_id as productB,
            COUNT(DISTINCT a.user_id) as coCount
        FROM user_product_interaction a
        INNER JOIN user_product_interaction b ON a.user_id = b.user_id AND a.product_id &lt; b.product_id
        GROUP BY a.product_id, b.product_id
    </select>

    <!-- 查询每个商品被多少用户交互过 -->
    <select id="selectProductUserCount" resultType="java.util.HashMap">
        SELECT 
            product_id as productId,
            COUNT(DISTINCT user_id) as userCount
        FROM user_product_interaction 
        GROUP BY product_id
    </select>

    <!-- 查询热门商品(按交互次数排序) -->
    <select id="selectHotProductIds" resultType="Long">
        SELECT product_id
        FROM user_product_interaction 
        GROUP BY product_id
        ORDER BY SUM(weight) DESC
        LIMIT #{limit}
    </select>

    <delete id="deleteUserProductInteractionById" parameterType="Long">
        delete from user_product_interaction where id = #{id}
    </delete>
</mapper>
